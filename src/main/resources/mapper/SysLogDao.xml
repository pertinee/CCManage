	<select id="queryObject" resultType="com.lcz.manage.sys.bean.SysLogBean">
		select * from sys_log where id = #{value}
	</select>

	<select id="queryList" resultType="com.lcz.manage.sys.bean.SysLogBean">
		select * from sys_log 
		<where>
			<if test="key != null and key.trim() != ''">
				`username` like concat('%',#{key},'%') or `operation` like concat('%',#{key},'%')
			</if>
		</where>
		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sys_log 
		<where>
			<if test="key != null and key.trim() != ''">
				`username` like concat('%',#{key},'%') or `operation` like concat('%',#{key},'%')
			</if>
		</where>
	</select>
	 
	<insert id="save" parameterType="com.lcz.manage.sys.bean.SysLogBean">
		insert into sys_log
		(
			`id`,
			`username`, 
			`operation`, 
			`method`, 
			`params`, 
			`ip`, 
			`create_date`
		)
		values
		(
			#{id},
			#{username}, 
			#{operation}, 
			#{method}, 
			#{params}, 
			#{ip}, 
			#{createDate}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcz.manage.sys.bean.SysLogBean">
		update sys_log 
		<set>
			<if test="username != null">`username` = #{username}, </if>
			<if test="operation != null">`operation` = #{operation}, </if>
			<if test="method != null">`method` = #{method}, </if>
			<if test="params != null">`params` = #{params}, </if>
			<if test="ip != null">`ip` = #{ip} </if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sys_log where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sys_log where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>