<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lcz.manage.test.dao.TestDao">

    <select id="queryObject" resultType="com.lcz.manage.test.bean.TestBean">
		select * from test where id = #{id}
	</select>

    <select id="queryList" resultType="com.lcz.manage.test.bean.TestBean">
        select * from test
        <where>
            <if test="id != null and id.trim() != ''">
                id = #{id}
            </if>
            <if test="name != null and name.trim() != ''">
                name like concat('%', #{name}, '%')
            </if>
        </where>
        order by id desc
    </select>

    <insert id="save" parameterType="com.lcz.manage.test.bean.TestBean">
		insert into test(`id`, `name`) values(#{id},#{name})
	</insert>

    <update id="update" parameterType="com.lcz.manage.test.bean.TestBean">
		update test set `name` = #{name}
		where id = #{id}
	</update>

    <delete id="delete" parameterType="com.lcz.manage.test.bean.TestBean">
		delete from test where id = #{id}
	</delete>

</mapper>