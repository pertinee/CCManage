<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lcz.manage.sys.dao.SysRoleDao">
	<!--<resultMap id="sysRoleMap" type="com.lcz.manage.sys.bean.SysRoleBeanBean" >-->
		<!--<id column="role_id" property="roleId" jdbcType="VARCHAR" />-->
		<!--<result column="role_name" property="roleName" jdbcType="VARCHAR" />-->
		<!--<result column="remark" property="remark" jdbcType="VARCHAR" />-->
		<!--<result column="create_user_id" property="createUserId" jdbcType="VARCHAR" />-->
		<!--<result column="create_date" property="createDate" jdbcType="DATE" />-->
	<!--</resultMap>-->

	<select id="queryObject" resultType="com.lcz.manage.sys.bean.SysRoleBean">
		select * from sys_role where role_id = #{value}
	</select>
	
	<select id="queryList" resultType="com.lcz.manage.sys.bean.SysRoleBean">
		select * from sys_role 
		<where>
			<if test="roleName != null and roleName.trim() != ''">
				and `role_name` like concat('%',#{roleName},'%') 
			</if>
			<if test="createUserId != null">
				and create_user_id = #{createUserId} 
			</if>
		</where>
		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by role_id asc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
	<select id="queryTotal" resultType="int">
		select count(*) from sys_role 
		<where>
			<if test="roleName != null and roleName.trim() != ''">
				and `role_name` like concat('%',#{roleName},'%') 
			</if>
			<if test="createUserId != null">
				and create_user_id = #{createUserId} 
			</if>
		</where>
	</select>
	
	<insert id="save" parameterType="com.lcz.manage.sys.bean.SysRoleBean" useGeneratedKeys="true" keyProperty="roleId">
		insert into sys_role
		(
			`role_id`, 
			`role_name`, 
			`remark`,
			`create_user_id`,
			`create_date`
		)
		values
		(
			#{roleId}, 
			#{roleName}, 
			#{remark},
			#{createUserId},
			#{createDate}
		)
	</insert>
	 
	<update id="update" parameterType="com.lcz.manage.sys.bean.SysRoleBean">
		update sys_role 
		<set> 
			<if test="roleName != null">`role_name` = #{roleName}, </if>
			<if test="remark != null">`remark` = #{remark}</if>
		</set>
		where role_id = #{roleId}
	</update>
	
	<delete id="deleteBatch">
		delete from sys_role where role_id in 
		<foreach item="roleId" collection="array" open="(" separator="," close=")">
			#{roleId}
		</foreach>
		;
		delete from sys_role_menu where role_id in 
		<foreach item="roleId" collection="array" open="(" separator="," close=")">
			#{roleId}
		</foreach>
		;
		delete from sys_user_role where role_id in 
		<foreach item="roleId" collection="array" open="(" separator="," close=")">
			#{roleId}
		</foreach>
	</delete>
	
	<!-- 查询用户创建的角色ID列表 -->
	<select id="queryRoleIdList" resultType="String">
		select role_id from sys_role where create_user_id = #{createUserId} 
	</select> 
</mapper>